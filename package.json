{
  "name": "lightseek",
  "version": "2.0.0-beta2",
  "description": "iSeek light theme.",
  "main": "style.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "scss:build": "node-sass-chokidar ./sass/style.scss ./style.css --source-map true",
    "scss:backend": "node-sass-chokidar ./sass/backend.scss ./backend.css --source-map true",
    "scss:woocommerce": "node-sass-chokidar ./sass/woocommerce.scss ./woocommerce.css --source-map true",
    "scsslive:build": "node-sass-chokidar ./sass/style.scss ./style.css --source-map true  --output-style compressed",
    "scsslive:backend": "node-sass-chokidar ./sass/backend.scss ./backend.css --source-map true  --output-style compressed",
    "scsslive:prefix": "postcss ./style.css --use autoprefixer -r",
    "browserify": "browserify src/js/scripts.js -t [ babelify --presets [ @babel/env ] ] | uglifyjs > js/scripts.js",
    "dev": "npm-run-all -p scss:**",
    "dev:js": "npm-run-all -p scss:** browserify",
    "build": "npm-run-all -s scsslive:** browserify",
    "watch": "chokidar ./sass/backend.scss ./sass/style.scss ./sass/*.scss ./sass/**/*.scss -c \"pnpm run dev\"",
    "watch:js": "chokidar ./sass/backend.scss ./sass/style.scss ./sass/*.scss ./sass/**/*.scss ./src/js/*.js -c \"pnpm run dev:js\"",
    "watch:live": "chokidar ./sass/backend.scss ./sass/style.scss ./sass/*.scss ./sass/**/*.scss ./src/js/*.js -c \"pnpm run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amielucha/lightseek.git"
  },
  "keywords": [
    "starter-theme"
  ],
  "author": "amielucha",
  "bugs": {
    "url": "https://github.com/amielucha/lightseek/issues"
  },
  "homepage": "https://github.com/amielucha/lightseek#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.5",
    "autoprefixer": "^9.7.3",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "chokidar-cli": "^2.1.0",
    "node-sass-chokidar": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "uglify-js": "^3.7.1"
  },
  "lightseek_options": {
    "scripts": true,
    "fitvids": true,
    "owl": false,
    "widgets": false,
    "footer-menu": false,
    "legal-menu": false,
    "webfonts": [],
    "colors": {
      "primary": "#1a70ab",
      "secondary": "#ff8000",
      "body": "#6a6b7d"
    },
    "fontawesome": {
      "enabled": true
    }
  }
}
